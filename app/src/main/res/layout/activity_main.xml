<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.preston.budget.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textColor="@color/colorWhite"
            android:background="@color/colorWhite"
            android:id="@+id/main_linear_layout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="Budget"
                android:id="@+id/main_title"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:textColor="@color/colorPrimaryDark"
                android:text="SUMMARY"
                android:id="@+id/main_summary_title"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorWhite"
                android:text="Current:"
                android:id="@+id/main_summary"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:layout_margin="@dimen/button_margin"
                android:text="Needs"
                android:id="@+id/needs"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorWhite"
                android:text="$0"
                android:id="@+id/main_needs_amount"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:layout_margin="@dimen/button_margin"
                android:text="Wants"
                android:id="@+id/wants"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorWhite"
                android:text="$0"
                android:id="@+id/main_wants_amount"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:layout_margin="@dimen/button_margin"
                android:text="ALL"
                android:id="@+id/all"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/button_margin"
                android:text="Categories"
                android:id="@+id/main_categories_title"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20pt"
                android:background="@color/colorLightBlue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/button_margin"
                android:text="Settings"
                android:id="@+id/main_settings_title"
                />

        </LinearLayout>
    </ScrollView>
    <!--

    -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
